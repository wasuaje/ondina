<script type="text/javascript">
var myRadioValue;

function radioValue(jqRadioButton){
  if (jqRadioButton.length) {
    myRadioValue = jqRadioButton.val();
    return myRadioValue;
  }
  else {
    myRadioValue = 0;
  }
}

$(document).ready(function () {
  
  $('input[name=operador]:radio').click(function () {   //Hook the click event for selected elements
    radioValue($('input[name=operador]:radio:checked'));
  });

  



});

</script>
